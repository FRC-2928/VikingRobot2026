{
  "tabs": [
    {
      "name": "Shooter Data Collection",
      "containers": [
        {
          "title": "Shooter Data Input",
          "type": "grid",
          "layout": {
            "numberOfColumns": 3,
            "numberOfRows": 3
          },
          "children": [
            {
              "title": "Distance (m)",
              "type": "Number Slider",
              "properties": {
                "Topic": "/ShooterData/distance_m",
                "Min": 0.0,
                "Max": 10.0,
                "Block increment": 0.1
              },
              "layout": {
                "column": 0,
                "row": 0,
                "width": 1,
                "height": 1
              }
            },
            {
              "title": "Velocity (RPS)",
              "type": "Number Slider",
              "properties": {
                "Topic": "/ShooterData/velocity_rps",
                "Min": 0.0,
                "Max": 100.0,
                "Block increment": 0.5
              },
              "layout": {
                "column": 1,
                "row": 0,
                "width": 1,
                "height": 1
              }
            },
            {
              "title": "Hood Angle (deg)",
              "type": "Number Slider",
              "properties": {
                "Topic": "/ShooterData/hood_angle_deg",
                "Min": 0.0,
                "Max": 90.0,
                "Block increment": 0.5
              },
              "layout": {
                "column": 2,
                "row": 0,
                "width": 1,
                "height": 1
              }
            },
            {
              "title": "Shot Successful?",
              "type": "Toggle Switch",
              "properties": {
                "Topic": "/ShooterData/successful"
              },
              "layout": {
                "column": 0,
                "row": 1,
                "width": 1,
                "height": 1
              }
            },
            {
              "title": "Notes",
              "type": "Text View",
              "properties": {
                "Topic": "/ShooterData/notes"
              },
              "layout": {
                "column": 1,
                "row": 1,
                "width": 2,
                "height": 1
              }
            },
            {
              "title": "RECORD DATA",
              "type": "Toggle Button",
              "properties": {
                "Topic": "/ShooterData/record_trigger"
              },
              "layout": {
                "column": 0,
                "row": 2,
                "width": 2,
                "height": 1
              }
            },
            {
              "title": "Recording",
              "type": "Boolean Box",
              "properties": {
                "Topic": "/ShooterData/recording_status",
                "True color": "#00FF00",
                "False color": "#808080"
              },
              "layout": {
                "column": 2,
                "row": 2,
                "width": 1,
                "height": 1
              }
            }
          ]
        }
      ]
    }
  ]
}
